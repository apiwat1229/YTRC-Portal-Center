{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YTRC Portal Center",
  "version": "0.1.0",
  "identifier": "com.apiwat.ytrc-portal-center",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "YTRC Portal Center",
        "width": 1440,
        "height": 900,
        "minWidth": 1280,
        "minHeight": 720,
        "maximized": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Y.T Rubber Co., Ltd.",
    "category": "Productivity",
    "shortDescription": "YTRC Portal Center Desktop Application",
    "longDescription": "Internal portal for YTRC staff to manage suppliers, bookings, truck receiving, and other master data.",
    "copyright": "Copyright Â© 2025",
    "windows": {
      "digestAlgorithm": "sha256"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdBNjJGMUZERDJDMjlCN0IKUldSN204TFMvZkZpZWk2ZUNZeXBZeWg0aytjZ2lneTRIZStxNnRVRGRqcU1uWCtsTmJCTzYyZXoK",
      "endpoints": [
        "https://database-system.ytrc.co.th/desktop-updates/ytrc-portal-center/latest.json"
      ],
      "windows": {
        "installMode": "passive",
        "devtools": false
      }
    }
  }
}
